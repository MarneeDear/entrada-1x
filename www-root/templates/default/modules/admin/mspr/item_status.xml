<?xml version="1.0" encoding="UTF-8"?>
<templates>
	<template lang="en" status="approved">
		<![CDATA[
		<li class="entry approved">
			%CONTENT%
			<div class="controls">
				<form action="%FORM_URL%" method="post">
					<input type="hidden" name="user_id" value="%USER_ID%"></input>
					<input type="hidden" name="entity_id" value="%ENTITY_ID%"></input>
					<input type="submit" name="action" value="Unapprove"></input>
				</form>
			</div>
			<div class="item-status">
				<span class="label">
					Status:
				</span>
				<span class="heading">
					Approved
				</span>
			</div>
		</li>
		]]>
	</template>
	<template lang="en" status="unapproved">
		<![CDATA[
		<li class="entry unapproved">
			%CONTENT%
			<div class="controls">
				<form action="%FORM_URL%" method="post">
					<input type="hidden" name="user_id" value="%USER_ID%"></input>
					<input type="hidden" name="entity_id" value="%ENTITY_ID%"></input>
					<input type="submit" name="action" value="Approve"></input>
				</form>
				<form action="%FORM_URL%" method="post">
					<input type="hidden" name="user_id" value="%USER_ID%"></input>
					<input type="hidden" name="entity_id" value="%ENTITY_ID%"></input>
					<input type="submit" name="action" value="Reject"></input>
				</form>
			</div>
			<div class="item-status">
				<span class="label">
					Status:
				</span>
				<span class="heading">
					Pending Approval
				</span>
			</div>
		</li>
		]]>
	</template>
	<template lang="en" status="rejected">
		<![CDATA[
		<li class="entry rejected">
			%CONTENT%
			<div class="controls">
				<form action="%FORM_URL%" method="post">
					<input type="hidden" name="user_id" value="%USER_ID%"></input>
					<input type="hidden" name="entity_id" value="%ENTITY_ID%"></input>
					<input type="submit" name="action" value="Approve"></input>
				</form>
			</div>
			<div class="item-status">
				<span class="label">
					Status:
				</span>
				<span class="heading">
					Rejected
				</span>
			</div>
		</li>
		]]>
	</template>
	<template lang="en" status="rejected_reason">
		<![CDATA[
		<li class="entry rejected">
			%CONTENT%
			<div class="controls">
				<form action="%FORM_URL%" method="post">
					<input type="hidden" name="user_id" value="%USER_ID%"></input>
					<input type="hidden" name="entity_id" value="%ENTITY_ID%"></input>
					<input type="submit" name="action" value="Approve"></input>
				</form>
			</div>
			<div class="item-status">
				<span class="label">
					Status:
				</span>
				<span class="heading">
					Rejected
				</span>
				<span class="label">
					Reason:
				</span>
				<p class="data">
					%REASON%
				</p>
			</div>
		</li>
		]]>
	</template>
	<template lang="en" status="default">
		<![CDATA[
		<li class="entry">
			%CONTENT%
			<div class="controls">
				<form action="%FORM_URL%" method="post">
					<input type="hidden" name="user_id" value="%USER_ID%"></input>
					<input type="hidden" name="entity_id" value="%ENTITY_ID%"></input>
					<input type="submit" name="action" value="Remove"></input>
				</form>
			</div>
		</li>
		]]>
	</template>
</templates>
